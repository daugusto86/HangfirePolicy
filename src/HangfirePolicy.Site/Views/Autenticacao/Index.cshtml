@model Login
<div class="row justify-content-center">
    <div class="col-4">
        <h4>Login</h4>
        <form asp-action="Login" asp-controller="Autenticacao" method="post">
            <div cite="mb-3">
                <label for="Usuario" class="form-label">Usuário</label>
                <input class="form-control" asp-for="@Model.Usuario" />
            </div>
            
            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input class="form-control" type="password" value="@Model.Senha" id="Senha" name="Senha" />
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>